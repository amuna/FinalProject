<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amuna95.finalproject.UserProfile">

    <TextView
        android:id="@+id/fnamelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="92dp"
        android:text="First Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/lnamelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fnamelbl"
        android:layout_below="@+id/fnamelbl"
        android:layout_marginTop="46dp"
        android:text="Last Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/pclbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lnamelbl"
        android:layout_below="@+id/lnamelbl"
        android:layout_marginTop="52dp"
        android:text="Post Code"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/fnametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fnamelbl"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="John"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lnametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lnamelbl"
        android:layout_alignStart="@+id/fnametxt"
        android:ems="10"
        android:hint="Smith"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pclbl"
        android:layout_alignStart="@+id/lnametxt"
        android:ems="10"
        android:hint="L6P 7S3"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fnamelbl"
        android:layout_below="@+id/pclbl"
        android:layout_marginTop="49dp"
        tools:text="SAVE" />

    <Button
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/savebtn"
        android:layout_alignBottom="@+id/savebtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp"
        android:text="EDIT" />

    <Button
        android:id="@+id/homebtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="backHome"
        android:text="Home" />

</RelativeLayout>